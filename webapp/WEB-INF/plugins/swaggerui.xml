<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>swaggerui</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>swaggerui.plugin.description</description>
    <provider>swaggerui.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/swaggerui/swaggerui.png</icon-url>
    <copyright>Copyright 2001-2016 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>5.0.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>


    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>swaggerui</application-id>
            <application-class>fr.paris.lutece.plugins.swaggerui.web.SwaggerUI</application-class>
        </application>
    </applications>
    
    <!-- Specific plugin CSS stylesheets -->
    <css-stylesheets>
        <css-stylesheets-scope>xpage</css-stylesheets-scope>
        <css-stylesheet>swaggerui/reset.css</css-stylesheet>
        <css-stylesheet>swaggerui/screen.css</css-stylesheet>
    </css-stylesheets>
    
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>swaggerui/lib/jquery-1.8.0.min.js</javascript-file>
        <javascript-file>swaggerui/lib/jquery.slideto.min.js</javascript-file>
        <javascript-file>swaggerui/lib/jquery.wiggle.min.js</javascript-file>
        <javascript-file>swaggerui/lib/jquery.ba-bbq.min.js</javascript-file>
        <javascript-file>swaggerui/lib/handlebars-2.0.0.js</javascript-file>
        <javascript-file>swaggerui/lib/js-yaml.min.js</javascript-file>
        <javascript-file>swaggerui/lib/lodash.min.js</javascript-file>
        <javascript-file>swaggerui/lib/backbone-min.js</javascript-file>
        <javascript-file>swaggerui/swagger-ui.js</javascript-file>
        <javascript-file>swaggerui/lib/highlight.9.1.0.pack.js</javascript-file>
        <javascript-file>swaggerui/lib/highlight.9.1.0.pack_extended.js</javascript-file>
        <javascript-file>swaggerui/lib/jsoneditor.min.js</javascript-file>
        <javascript-file>swaggerui/lib/marked.js</javascript-file>
        <javascript-file>swaggerui/lib/swagger-oauth.js</javascript-file>
        <javascript-file>swaggerui/swaggerui.js</javascript-file>
    </javascript-files>

    <servlets>
        <servlet>
            <servlet-name>swaggerui-servlet</servlet-name>
            <url-pattern>/servlet/plugins/swaggerui</url-pattern>
            <servlet-class>fr.paris.lutece.plugins.swaggerui.web.SwaggerServlet</servlet-class>
        </servlet>
    </servlets>
    
</plug-in>